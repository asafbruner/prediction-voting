generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  options     String   // JSON string
  votes       String   // JSON string
  order       Int
  createdAt   DateTime @default(now())
}